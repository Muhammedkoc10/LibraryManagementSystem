    <section class="search-filters">
        <div class="container">
            <div class="filter-box">
                <h3>Kütüphanede hangi kitabı arıyorsunuz? <hr /> Which book are you looking for in the library? </h3>
                <form action="http://libraria.demo.presstigers.com/index.html" method="get">
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <label class="sr-only" for="keywords">İsme Göre Ara</label>
                            <input class="form-control" placeholder="İsme Göre Ara / Search by Keywords" id="keywords" name="keywords" type="text">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <select name="category" id="category" class="form-control">

                                @foreach (var item in Model.Category)
                                {
                                    <option>
                                        @item.CategoryName
                                    </option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="form-group">
                            <input class="form-control" type="submit" value="Ara / Search">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>

